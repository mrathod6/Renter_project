@model Tool
<!DOCTYPE html>
<html>
    <head>        
        <meta charset="utf-8">
        <title>Rntr</title>
        <link rel="stylesheet" href="~/css/addtool.css"/>
        <link href="https://fonts.googleapis.com/css?family=Biryani:900&display=swap" rel="stylesheet">
    </head>
    <body>
        <div class = "headercontainer">
            <div class = "header">
                <h1>Hey @ViewBag.LoggedInUser.FirstName Add a tool you'd like to rent out <h1>
            </div>
        </div>

    <div class = "addtoolcontainer">
        <div class = "addtoolform">
                <h2> Add a Tool </h2>
                <br>
                <div class = "forminputs">
                    <form action="AddToolProcess" method="Post" enctype ="multipart/form-data">
                            <label asp-for="ToolName"></label>
                            <input asp-for="ToolName">
                            <span asp-validation-for="ToolName"></span>
                            <br>
                            <br>
                            <label asp-for="Description"></label>
                            <input asp-for="Description">
                            <span asp-validation-for="Description"></span>
                            </div>
                            <br>
                            <br>
                            <label asp-for="ToolImage1"></label>
                            <input type ="file" name = "ToolImage">
                            <span asp-validation-for="ToolImage1"></span>
                            <br>
                            <br>
                            <div class = "formbutton">
                            <input type="submit" value="Add A Tool!">
                            </div>
                    </form>
                </div>
        </div>

<div class = "logout">
<h3> <a href = "/logout">Logout</a><h3>
</div>

<div class = "back">
<h3> <a href = "/Dashboard">Back</a><h3>
    </div>
    </body>
    </html>