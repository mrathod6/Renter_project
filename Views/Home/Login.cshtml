@model LogUser
<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Rntr - Login</title>
        <link rel="stylesheet" href="~/css/login.css"/>
<link href="https://fonts.googleapis.com/css?family=Biryani:900&display=swap" rel="stylesheet"></head>
    <body>
        <div class = "headercontainer">
            <div class = "header">
                <h1> Rntr - Why buy it when you can rent it? </h1>
                <a href = "/">Back</a>
            </div>
        </div>
        <div class = "logincontainer">

            <div class = "loginform">
                <h2>Login</h2>
                    <div class = "forminputs">
                        <form action="LoginProcess" method="Post">
                            <label asp-for="LogEmail"></label>
                            <input asp-for="LogEmail">
                            <span asp-validation-for="LogEmail"></span>
                            <br>
                            <br>
                            <label asp-for="LogPassword"></label>
                            <input asp-for="LogPassword">
                            <span asp-validation-for="LogPassword"></span>
                            <br>
                            <br>
                    </div>

                    <div class = "loginbutton">
                        <input type="submit" value="Login Now!">
                    </div>

                        </form>
                    </div>
            </div>

</body>

</html>